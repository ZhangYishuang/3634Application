<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/back"
    >
    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:paddingLeft="36dp"
            android:paddingTop="20dp"
            android:id="@+id/tv_id"
            android:text="1. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:paddingTop="20dp"
            android:text="This is a question This is a question This is a question This is a question This is a question This is a question This is a question"
            android:layout_toRightOf="@id/tv_id"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_below="@id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <RadioGroup
            android:paddingLeft="30dp"
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="firstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirstfirst"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_marginTop="16dp"
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="secondsecondsecondsecondsecondsecondsecondsecondsecondsecondsecondsecondsecondsecondsecond"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_marginTop="16dp"
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthirdthird"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_marginTop="16dp"
                android:id="@+id/rb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fourthfourthfourthfourthfourthfourthfourthfourthfourthfourthfourthfourthfourthfourthfourth"
                android:textSize="18sp"/>
        </RadioGroup>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_below="@id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:paddingRight="40dp"
        >
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/iv"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_ex"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv"
            android:layout_toLeftOf="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>